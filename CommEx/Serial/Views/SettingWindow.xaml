<Window x:Class="CommEx.Serial.Views.SettingWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:vm="clr-namespace:CommEx.Serial.ViewModel"
        mc:Ignorable="d"
        Title="Serial Port Settings" Height="400" Width="500">
    <Window.Resources>
        <vm:BoolToColorConverter x:Key="BoolToColorConverter"/>
    </Window.Resources>

    <Viewbox>

        <Grid Height="350" Width="500">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="100"/>
                <ColumnDefinition Width="150"/>
                <ColumnDefinition Width="100"/>
                <ColumnDefinition Width="150"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="*" />
                <RowDefinition Height="30" />
                <RowDefinition Height="10" />
                <RowDefinition Height="30" />
                <RowDefinition Height="10" />
                <RowDefinition Height="30" />
                <RowDefinition Height="10" />
                <RowDefinition Height="30" />
                <RowDefinition Height="10" />
                <RowDefinition Height="30" />
                <RowDefinition Height="10" />
                <RowDefinition Height="30" />
                <RowDefinition Height="10" />
                <RowDefinition Height="30" />
                <RowDefinition Height="10" />
                <RowDefinition Height="30" />
                <RowDefinition Height="10" />
                <RowDefinition Height="30" />
                <RowDefinition Height="*" />
            </Grid.RowDefinitions>
       

            <!-- ポート名 -->
            <Label Content="Port Name:" Grid.Column="1" Grid.Row="1" VerticalAlignment="Center" HorizontalAlignment="Left"/>
            <ComboBox x:Name="PortNameComboBox" Grid.Column="2" Grid.Row="1" VerticalAlignment="Center" HorizontalAlignment="Left" Margin="0" Width="150" DropDownOpened="DropDownOpened" ItemsSource="{Binding AvailablePorts}" SelectedItem="{Binding PortName}" IsEnabled="{Binding IsClosed}"/>

            <!-- ボーレート -->
            <Label Content="Baud Rate:" Grid.Column="1" Grid.Row="3"  VerticalAlignment="Center" HorizontalAlignment="Left"/>
            <ComboBox x:Name="BaudRateComboBox" Grid.Column="2" Grid.Row="3" VerticalAlignment="Center" HorizontalAlignment="Left" Margin="0" Width="150" IsEditable="True" ItemsSource="{Binding BaudRates}" SelectedItem="{Binding BaudRate}" IsEnabled="{Binding IsClosed}"/>

            <!-- データビット -->
            <Label Content="Data Bits:" Grid.Column="1" Grid.Row="5"  VerticalAlignment="Center" HorizontalAlignment="Left"/>
            <ComboBox x:Name="DataBitsComboBox" Grid.Column="2" Grid.Row="5" VerticalAlignment="Center" HorizontalAlignment="Left" Margin="0" Width="150" ItemsSource="{Binding DataBitsOptions}" SelectedItem="{Binding DataBits}" IsEnabled="{Binding IsClosed}"/>

            <!-- ストップビット -->
            <Label Content="Stop Bits:" Grid.Column="1" Grid.Row="7" VerticalAlignment="Center" HorizontalAlignment="Left"/>
            <ComboBox x:Name="StopBitsComboBox" Grid.Column="2" Grid.Row="7" VerticalAlignment="Center" HorizontalAlignment="Left" Margin="0" Width="150" ItemsSource="{Binding StopBitsOptions}" SelectedItem="{Binding StopBits}" IsEnabled="{Binding IsClosed}"/>

            <!-- パリティ -->
            <Label Content="Parity:" Grid.Column="1" Grid.Row="9" VerticalAlignment="Center" HorizontalAlignment="Left"/>
            <ComboBox x:Name="ParityComboBox" Grid.Column="2" Grid.Row="9" VerticalAlignment="Center" HorizontalAlignment="Left" Margin="0" Width="150" ItemsSource="{Binding ParityOptions}" SelectedItem="{Binding Parity}" IsEnabled="{Binding IsClosed}"/>

            <!-- フロー制御 -->
            <Label Content="Flow Control:" Grid.Column="1" Grid.Row="11" VerticalAlignment="Center" HorizontalAlignment="Left"/>
            <ComboBox x:Name="FlowControlComboBox" Grid.Column="2" Grid.Row="11" VerticalAlignment="Center" HorizontalAlignment="Left" Margin="0" Width="150" ItemsSource="{Binding HandshakeOptions}" SelectedItem="{Binding Handshake}" IsEnabled="{Binding IsClosed}"/>

            <!-- 改行文字 -->
            <Label Content="New Line:" Grid.Column="1" Grid.Row="13" VerticalAlignment="Center" HorizontalAlignment="Left"/>
            <ComboBox x:Name="NewLineComboBox" Grid.Column="2" Grid.Row="13" VerticalAlignment="Center" HorizontalAlignment="Left" Margin="0" Width="150" ItemsSource="{Binding NewLineOptions}" SelectedItem="{Binding NewLine}" IsEnabled="{Binding IsClosed}"/>

            <!-- DTR -->
            <Label Content="DTR:" Grid.Column="1" Grid.Row="15" VerticalAlignment="Center" HorizontalAlignment="Left"/>
            <CheckBox x:Name="isDtr" Grid.Column="2" Grid.Row="15" VerticalAlignment="Center" HorizontalAlignment="Center" IsChecked="{Binding DtrEnable}" IsEnabled="{Binding IsClosed}"/>

            <!-- AutoConnect -->
            <Label Content="Auto Connect:" Grid.Column="3" Grid.Row="13" VerticalAlignment="Center" HorizontalAlignment="Left"/>
            <CheckBox x:Name="isAutoConnect" Grid.Column="4" Grid.Row="13" VerticalAlignment="Center" HorizontalAlignment="Center" IsChecked="{Binding IsAutoConnent}"/>

            <!-- 接続状況表示 -->
            <Ellipse x:Name="PortStaus" Grid.Column="3" Grid.Row="15" VerticalAlignment="Center" HorizontalAlignment="Center" Width="20" Height="20" Fill="{Binding IsOpen, Converter={StaticResource BoolToColorConverter}}"/>

            <!-- ポートを開閉するボタン -->
            <Button x:Name="OpenButton" Content="Open/Close Port" Grid.Column="4" Grid.Row="15" VerticalAlignment="Center" HorizontalAlignment="Center" Margin="0" Width="150" Command="{Binding OpenClosePortCommand}"/>
        </Grid>

    </Viewbox>
</Window>
